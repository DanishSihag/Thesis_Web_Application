<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/stylesheet_shopping_cart.css" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Alkalami&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <title>Vegatables and Fruits</title>
  </head>
  <body><br><br>
    <h1 style="text-align:center;">Items Added in Cart</h1><br>
    <div class="container-fluid d-flex">
        <div class="container-fluid products-container mt-5">
          <div class="container-fluid product-header">
            <h6 class="product-title" style="display:inline">ITEM</h6>
            <h6 class="price" style="display:inline">PRICE</h6>
            <h6 class="quantity" style="display:inline">QUANTITY</h6>
            <h6 class="total" style="display:inline">TOTAL</h6>
          </div>
          <% cart.forEach(function(item){ %>
          <div class="container-fluid products">
            <div class="product" style="display: inline-block; border-bottom: 0.13rem solid black;">
              <form action="/remove_product" method="post" style="display: inline-block; width:18%;">
                <input type="hidden" name="id" value="<%= item.id %>">
                <input type="submit" value="Delete" class="btn btn-danger">
              </form>
              <img class="img-fluid" src="../images/inside_main/<%= item.image %>">
              <span style="font-size:1.08rem;"><%= item.name %></span>
            </div>
            <div class="price-item">
              HUF <%= item.price %>
            </div>
            <form method="post" action="/edit_product_quantity" style="display: inline-block; width:20%;">
              <input type="hidden" name="id" value="<%= item.id %>">
              <input type="submit" name="decrement" value="-" class="btn btn-info edit-btn" style="font-weight:bolder;">
              <input id="qty" type="text" name="quantity" value="<%= item.quantity %>" readonly>
              <input type="submit" name="increment" value="+" class="btn btn-info edit-btn" style="font-weight:bolder;">
            </form>
            <div class="total" style="display: inline-block; font-size:1.18rem;">
              HUF <%= item.price * item.quantity %>
            </div>
          </div>
          <% }) %>
        </div>
    </div><br><br>
    <hr>
    <div class="cart-total ms-5" style="display: inline-block;">
      <h4 class="ms-5">Total Cart Price: &nbsp;<span style="font-size:1.4rem;">HUF <%= total %></span> </h4>
    </div>
    <div class="checkout-form-container ms-5" style="display: inline-block;">
    <form method="get" action="/checkout">
      <input class="btn btn-success checkout-btn ms-5" type="submit" value="Checkout" style="font-size: 1.25rem; display: inline-block;"></input>
    </form>
    </div>
    <br><br><br>
 </body>
</html>
